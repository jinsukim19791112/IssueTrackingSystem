@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>musicbook</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <script src="~/js/jquery-2.1.4.min.js"></script>
    <script src="~/js/jquery.easing.1.3.js"></script>
    <script src="~/js/prefixfree.min.js"></script>
    <style>
        @@import url(http://fonts.googleapis.com/css?family=Monoton);
        @@import url(http://fonts.googleapis.com/earlyaccess/jejugothic.css);
        * {
            margin: 0;
            padding: 0
        }

        ol,
        ul {
            list-style: none;
        }

        a {
            outline: 0;
            text-decoration: none;
            color: #555;
        }

        img {
            border: 0;
        }

        body {
            font: 12px/1.6 'Poiret one';
            color: #555;
            background: black;
        }

        header {
            background: linear-gradient(-45deg, lightgreen, green);
            width: 100%;
            height: 120px;
            transition: all 0.5s;
        }

        header em {
            font-size: 70px;
            font-family: 'Monoton', cursive;
            color: aliceblue;
            position: absolute;
            left: 50px;
        }

        nav {
            width: 100%;
            height: 100px;
            background: #212121;
            transition: all 0.5s;
        }

        section {
            width: 100%;
            position: relative;
            margin-left: 0%;
        }

        article {
            float: left;
            height: 260px;
            transition: all 0.5s;
            animation: scale 1s 1;
        }

        @@keyframes scale {
            0% {
                transform: scale(0);
            }
            100% {
                transform: scale(1);
            }
        }

        article:nth-child(1) {
            width: 60%;
            height: 520px;
            background: #ddd;
        }

        article:nth-child(2) {
            width: 40%;
            background: #ccc;
        }

        article:nth-child(3) {
            width: 20%;
            background: #bbb;
        }

        article:nth-child(4) {
            width: 20%;
            background: #aaa;
        }

        article:nth-child(5) {
            width: 30%;
            background: #999;
        }

        article:nth-child(6) {
            width: 30%;
            background: #888;
        }

        article:nth-child(7) {
            width: 40%;
            background: #777;
        }

        article>div {
            position: relative;
            width: 100%;
            height: 100%;
            overflow: hidden;
            cursor: pointer;
        }

        article:nth-child(1) video {
            position: absolute;
            width: 100%;
            opacity: 0.9;
        }

        article:nth-child(1) p {
            font-size: 30px;
            font-family: 'Jeju Gothic', sans-serif;
            top: 235px;
            right: 270px;
            position: absolute;
            opacity: 0.3;
            color: aliceblue;
            z-index: 11;
            transition: all 1s;
        }

        article:nth-child(1) i {
            position: absolute;
            font-size: 300px;
            top: 100px;
            left: -250px;
            transition: all 1s;
        }

        article:nth-child(1):hover i {
            left: 0px;
            opacity: 0.5;
        }

        article:nth-child(1):hover p {
            opacity: 0.7;
        }

        header ul li {
            float: left;
            font-size: 20px;
            font-family: 'Jeju Gothic', sans-serif;
            width: 100px;
            height: 50px;
            box-sizing: border-box;
            padding-top: 10px;
            opacity: 0.6;
            transition: all 1s;
            border-radius: 10px;
        }

        header ul li:nth-child(1) {
            position: relative;
            background: gold;
            left: 700px;
            top: 40px;
            padding-left: 20px;
        }

        header ul li:nth-child(2) {
            position: relative;
            background: white;
            left: 710px;
            top: 40px;
            padding-left: 15px;
        }

        header ul li:nth-child(1):hover {
            opacity: 1;
            transform: rotateY(30deg);
        }

        header ul li:nth-child(2):hover {
            opacity: 1;
            transform: rotateY(-30deg);
        }

        article p {
            font-size: 50px;
            font-family: 'Jeju Gothic', sans-serif;
            transition: all 1s;
            opacity: 0.5;
        }
    </style>
</head>

<body>
    <header>
        <em>musicbook</em>
        <ul>
            <li>
